<launch>
  <!-- Tell roslaunch which robot model to use -->
  <env name="TURTLEBOT3_MODEL" value="burger"/>

  <!-- Use simulation time for all nodes -->
  <param name="use_sim_time" value="true"/>

  <!-- Bring up the Gazebo world -->
  <include file="$(find turtlebot3_gazebo)/launch/turtlebot3_world.launch"/>

  <!-- Launch Hector SLAM in sim time -->
  <include file="$(find turtlebot3_slam)/launch/turtlebot3_slam.launch">
    <arg name="slam_methods" value="hector"/>
  </include>

  <!-- RViz with your cleaning_config -->
  <node pkg="rviz" type="rviz" name="rviz_clean" output="screen"
        args="-d $(find projectrbt)/rviz/cleaning_config.rviz"/>

  <!-- Your cleaner script -->
  <node pkg="projectrbt" type="cleanertest.py" name="cleaner" output="screen"/>
</launch>

